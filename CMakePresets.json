{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Ninja",
            "description": "Default build using Ninja generator",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_PREFIX_PATH": "C:/Qt/Qt5.12.11/5.12.11/msvc2017_64"
            }
        },
        {
            "name": "x64",
            "description": "Sets x64 arch, compilers",
            "hidden": true,
            "inherits": [
                "Ninja"
            ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "x64-Debug",
            "inherits": [
                "x64"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-Release",
            "inherits": [
                "x64"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "x64-UnitTest",
            "inherits": [
                "x64"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "DC_ENABLE_UNITTEST": true
            }
        },
        {
            "name": "Apple-Base",
            "description": "Default build using Ninja generator",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "Apple-M2",
            "hidden": false,
            "inherits": [
                "Apple-Base"
            ],
            "architecture": {
                "value": "arm64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64-Debug",
            "configurePreset": "x64-Debug"
        },
        {
            "name": "x64-Release",
            "configurePreset": "x64-Release"
        },
        {
            "name": "x64-UnitTest",
            "configurePreset": "x64-UnitTest"
        },
        {
            "name": "Apple-M2",
            "configurePreset": "Apple-M2"
        }
    ],
    "testPresets": [
        {
            "name": "x64-UnitTest",
            "configurePreset": "x64-UnitTest",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "Apple-M2",
            "configurePreset": "Apple-M2",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}